{
  "database": {
    "type": "sqlite",
    "sqlite": {
      "path": "data/xiuxing.db"
    },
    "mysql": {
      "host": "localhost",
      "port": "3306",
      "user": "root",
      "password": "password",
      "password_encoded": false,
      "database": "xiuxing_db",
      "charset": "utf8mb4"
    },
    "pool": {
      "pool_size": 10,
      "max_overflow": 20,
      "pool_timeout": 30,
      "pool_recycle": 3600,
      "pool_pre_ping": true
    }
  },
  "app": {
    "host": "0.0.0.0",
    "port": 5566,
    "debug": true,
    "secret_key": "your-secret-key-here"
  },
  "development": {
    "enabled": true,
    "auto_reload": true,
    "watch_directories": ["models", "routes", "templates", "static", "utils"],
    "ignore_patterns": ["*.pyc", "*.log", "*.tmp", "__pycache__/*", "logs/*", "data/*"]
  },
  "upload": {
    "max_file_size": 16777216,
    "allowed_extensions": ["txt", "json", "csv", "xlsx"],
    "upload_folder": "uploads"
  },
  "logging": {
    "level": "DEBUG",
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
    "file": "logs/app.log"
  },
  "jwt": {
    "secret_key": "jwt-secret-key-here",
    "access_token_expires_days": 30
  },
  "cors": {
    "origins": ["*"]
  }
}